@model List<ToDoTask.Models.ToDoEntity>

<h2>To-Do Tasks</h2>

<form asp-action="AddToDo" method="post" style="margin-bottom: 10px;">
    <input type="text" name="text" placeholder="Enter new task" required />
    <button type="submit">Add</button>
</form>

<ul style="list-style-type: none; padding: 0;">
    @foreach (var item in Model)
    {
        <li style="margin-bottom: 6px;">
            <form asp-action="ToggleCompletion" method="post" style="display: inline;">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit">
                    @Html.Raw(item.IsCompleted ? "&#9989;" : "&#10060;")
                </button>
            </form>

            <span style="margin-left: 5px;">
                @item.Text
            </span>

            <form asp-action="DeleteToDo" method="post" style="display: inline; margin-left: 8px;">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit">Delete</button>
            </form>
        </li>
    }
</ul>
